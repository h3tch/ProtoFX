/////////////
// BUFFERS //
/////////////

buffer buf_pos {
	usage staticDraw
	xml "geom/cube.xml" data/position
}

buffer buf_col {
	usage staticDraw
	xml "geom/cube.xml" data/color
}

buffer buf_idx {
	usage staticDraw
	xml "geom/cube.xml" data/index
}

/////////////////////
// BUFFER BINDINGS //
/////////////////////

vertinput in_vert {
	attr buf_pos float 4
	attr buf_col float 4
}

/////////////////
// CSHARP CODE //
/////////////////

csharp cs_util {
	file "<csharp>/StaticCamera.cs" "<csharp>/SimpleCamera.cs"
}

instance cs_camera {
	class cs_util csharp.SimpleCamera
	name Camera
	pos 0 0 5
}